<configuration>
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} TKD [%thread] %-5level %logger{36} - %msg%n
			</pattern>
		</encoder>
	</appender>	
	
	<logger name="es.upm.fi.oeg.morph" level="DEBUG" />
	<logger name="es.upm.fi.oeg.morph.r2rml" level="INFO"/>
	<logger name="es.upm.fi.oeg.morph.stream.rewriting.QueryOptimizer" level="TRACE"/>
	<logger name="es.upm.fi.oeg.morph.stream.esper.EsperResultSet" level="TRACE" />
	<logger name="eu.planetdata.srbench" level="TRACE" />
		
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>
</configuration>
